# Environment variables for Fill Rate Classifier

# Claude API Configuration
CLAUDE_API_KEY=your_api_key_here
CLAUDE_BASE_URL=https://finch.instawork.com

# FastAPI Server Configuration
API_BEARER_TOKEN=your_webhook_bearer_token_here
HOST=0.0.0.0
PORT=8000

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration (optional)
DATABASE_URL=sqlite:///data/fill_rate_classifier.db

# API Rate Limiting
RATE_LIMIT_CALLS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Classification Thresholds
EMAIL_CONFIDENCE_THRESHOLD=0.7
ACTION_CONFIDENCE_THRESHOLD=0.85

# Batch Processing Configuration
BATCH_MAX_CONCURRENT=10
BATCH_MAX_RETRIES=3